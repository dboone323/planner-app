# Unified SwiftFormat Configuration
# Version: 0.53+
# Swift: 6.0
# Updated: February 9, 2026
#
# This is the standard configuration for all projects in the tools-automation workspace.
# Apply this to all projects: cp UNIFIED_SWIFTFORMAT_TEMPLATE project-name/.swiftformat

# Swift version
--swiftversion 6.0

# Indentation and Tabs
--indent 4
--tabwidth 4
--indentcase false

# Line Breaks
--linebreaks lf

# Spacing and Wrapping
--maxwidth 120
--wraparguments preserve
--wrapparameters preserve
--wrapcollections preserve
--closingparen balanced
--wrapternary before-operators

# Commas
--commas always

# Operators
--operatorfunc spaced

# Semicolons
--semicolons never

# Self Reference
--self insert

# Imports
--importgrouping testable-bottom

# Numbers Grouping
--decimalgrouping 3,6
--binarygrouping 4,8
--hexgrouping 4,8
--octalgrouping 4,8
--fractiongrouping enabled
--exponentgrouping enabled

# Hex and Exponent
--hexliteralcase uppercase
--exponentcase lowercase

# Else Positioning
--elseposition same-line

# Braces
--allman false

# Pattern Let
--patternlet hoist

# Unused Arguments
--stripunusedargs closure-only

# Function and Type Attributes
--funcattributes prev-line
--typeattributes prev-line

# Whitespace
--trimwhitespace always

# Organize Types
--organizetypes actor,class,enum,struct

# Enabled Rules
--enable isEmpty
--enable hoistPatternLet
--enable wrapMultilineStatementBraces
--enable blankLinesBetweenScopes
--enable consecutiveSpaces
--enable duplicateImports
--enable sortImports
--enable unusedArguments
--enable void
--enable trailingCommas
--enable strongifiedSelf

# Disabled Rules
--disable andOperator
--disable blankLinesAtStartOfScope
--disable blankLinesAtEndOfScope
--disable redundantSelf
--disable wrapEnumCases
--disable spaceAroundOperators

# Exclusions
--exclude .build,Package.swift,node_modules,.swiftpm
