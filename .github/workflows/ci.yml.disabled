name: CI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: macos-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          submodules: recursive

      - name: Xcode version
        run: xcodebuild -version

      - name: Resolve Swift Packages
        run: |
          set -eo pipefail
          xcodebuild -resolvePackageDependencies -project PlannerApp.xcodeproj

      - name: List schemes
        run: |
          xcodebuild -list -project PlannerApp.xcodeproj
